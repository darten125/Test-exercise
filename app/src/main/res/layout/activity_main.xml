<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:text="@string/menu"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:layout_gravity="end"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appearing_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/appearing_button_1"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/button_text"
            android:layout_marginTop="10dp"
            app:maxImageSize="45dp"
            android:visibility="invisible"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appearing_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/appearing_button_1"
            android:layout_alignParentEnd="true"
            android:src="@drawable/appearing_button_2"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/button_text"
            android:layout_marginTop="10dp"
            app:maxImageSize="45dp"
            android:visibility="invisible"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appearing_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/appearing_button_2"
            android:layout_alignParentEnd="true"
            android:src="@drawable/appearing_button_3"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/button_text"
            android:layout_marginTop="10dp"
            app:maxImageSize="45dp"
            android:visibility="invisible"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appearing_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/appearing_button_3"
            android:layout_alignParentEnd="true"
            android:src="@drawable/appearing_button_4"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/button_text"
            android:layout_marginTop="10dp"
            app:maxImageSize="45dp"
            android:visibility="invisible"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appearing_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/appearing_button_4"
            android:layout_alignParentEnd="true"
            android:src="@drawable/appearing_button_5"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/button_text"
            app:maxImageSize="45dp"
            android:visibility="invisible"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>